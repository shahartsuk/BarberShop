@model BarberShop.ViewModelBarber.VMSelectAction

@{
    ViewData["Title"] = "SelectAction";
}

<h1>
    הכנסת פעולות ללו"ז"
</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SelectAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HaircutOptionalActions" class="control-label"></label>
                <select asp-for="HaircutActionID" class="form-control">
                    @foreach (HairCutActions item in Model.HaircutOptionalActions)
                    {
                        <option value="@item.ID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="HaircutOptionalActions" class="text-danger"></span>
            </div>
            <input asp-for="BarberID" hidden="hidden" />
            <div class="form-group">
                <label asp-for="ActionDuration" class="control-label"></label>
                <input asp-for="ActionDuration" class="form-control" />
                <span asp-validation-for="ActionDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentFromTotalActions" class="control-label"></label>
                <input asp-for="PercentFromTotalActions" class="form-control" />
                <span asp-validation-for="PercentFromTotalActions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

