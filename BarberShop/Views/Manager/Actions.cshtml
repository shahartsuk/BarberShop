@model BarberShop.ViewModelManager.VMCreateHairCut

@{
    ViewData["Title"] = "Actions";
}

<h1>תספורות</h1>
@if (Model.ActionList.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Action.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Action.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Action.Image)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ActionList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                        @if(item.Image != null)
                        {
                    <td>
                            <img class="card-img-top" src="data:image;base64,@System.Convert.ToBase64String(item.Image)" width="90" height="60" />
                    </td>
                        }
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<button class="btn btn-primary" onclick="addAction()">הוספת תספורת</button>
<div id="addAction" style="display:none">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Actions" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Action.Name" class="control-label"></label>
                    <input asp-for="Action.Name" class="form-control" />
                    <span asp-validation-for="Action.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Action.Description" class="control-label"></label>
                    <input asp-for="Action.Description" class="form-control" />
                    <span asp-validation-for="Action.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Action.Image" class="control-label"></label>
                    <input type="file" asp-for="Action.Image" class="form-control" />
                    <span asp-validation-for="Action.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="הוספת פעולה" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    </div>
