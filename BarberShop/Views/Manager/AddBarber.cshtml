@model BarberShop.ViewModelManager.VMIsActiveBarbers

@{
    ViewData["Title"] = "AddBarber";
}

<h1>AddBarber</h1>

<h4>Barber</h4>
@if (Model.Users.Count > 0)
{
    <h3>ספרים פעילים</h3>
    <table class="table" enctype="multipart/form-data">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.First().Email)
                </th>
                <th>הפוך לספר</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("הפוך לספר","CreateBarber", new {id=item.ID})
                        @*               @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<hr />
